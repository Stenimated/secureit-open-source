---
import { RiHealthPulseFill } from "solid-icons/ri";
import { RiDesignHammerLine } from "solid-icons/ri";
import Layout from "../layouts/standard.astro";
import { Middleware } from "@/util/middeware";
const result = await Middleware(Astro);
if (result) {
    return result;
}
---

<Layout title="Hello world">
    <div class="w-full h-full flex justify-center flex-col items-center pb-10">
        <div
            class="flex items-center flex-col space-y-3 sm:pt-52 pt-96 h sm:text-left text-center"
        >
            <div class="w-full px-5">
                <h1 class="text-5xl font-light">
                    Vi gjør informasjon mer tilgjenlig
                </h1>
                <p class="text-2xl text-gray-500 font-thin">
                    <br />I Norge innrapporteres over 23 000 arbeidsulykker
                    årlig. Vi secureit UB gjør informasjon mer tilgjenlig
                </p>
                <button
                    class="bg-blue-600 py-4 px-6 rounded-xl text-white font-medium mt-10 border hover:border-x-blue-400 transition-all shadow-lg"
                >
                    <a href="/search" class="w-full text-center"
                        >Finn informasjon &gt;</a
                    >
                </button>
            </div>
        </div>
        <div>
            <h2 class="text-4xl font-light mt-[10rem] text-center">
                Velg din bransje
            </h2>
            <div
                class="flex justify-center items-center h-36 space-x-32 font-light mt-12"
            >
                <a
                    class="text-center text-2xl h-full justify-between flex flex-col hover:ring-1 ring-slate-400 ring-opacity-50 ring-offset-4 rounded-lg hover:bg-gray-50 hover:bg-opacity-50"
                    href="/branch/helse"
                >
                    <RiHealthPulseFill class={"w-24 h-24 fill-orange-400"} />
                    <p>Helse</p>
                </a>
                <a
                    class="text-center text-2xl h-full justify-between flex flex-col hover:ring-1 ring-slate-400 ring-opacity-50 ring-offset-4 rounded-lg hover:bg-gray-50 hover:bg-opacity-50"
                    href="/branch/bygg"
                >
                    <RiDesignHammerLine class={"w-24 h-24 fill-orange-400"} />
                    <p>Bygg</p>
                </a>
            </div>

            <div
                class="justify-center flex flex-row items-center w-full mt-10 space-x-5"
            >
                <div class="h-[1px] w-full bg-gray-300"></div>
                <p class="text-gray-400 font-sans text-xl">Eller</p>
                <div class="h-[1px] w-full bg-gray-300"></div>
            </div>
        </div>

        <a
            href="/search"
            class="p-2 px-5 mt-3 border rounded-lg mb-10 hover:bg-gray-50"
            >Søk i alle bransjer
        </a>

        <div class="w-full h-60">_</div>
    </div>
</Layout>
